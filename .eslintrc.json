{
  "extends": [
    "next/core-web-vitals",
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended",
    "prettier"
  ],
  "plugins": ["prettier", "@typescript-eslint", "check-file"],
  "parser": "@typescript-eslint/parser",
  "rules": {
    "prettier/prettier": [
      "warn",
      {
        "endOfLine": "auto"
      }
    ],
    "check-file/filename-naming-convention": [
      "error",
      {
        "./src/**/*.*": "KEBAB_CASE"
      }
    ]
  },
  "root": true
}
